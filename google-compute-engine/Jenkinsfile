pipeline {
    agent any

    environment {
    SVC_ACCOUNT_KEY = credentials('terraform-auth')
  }
     
    stages {
              stage ('checkout'){
            steps {
                git branch: 'main', url: 'https://github.com/shaikshoaib27/gcpdevops.git'
            }
        }
		stage('Set creds') {
            steps {
              
                sh 'echo $SVC_ACCOUNT_KEY | base64 -d > ./google-compute-engine/jenkins.json'
		            sh 'pwd'
		    sh 'cd google-compute-engine'
                       
               
            }
        }
	
	stage('Auth-Project') {
	 steps {
		 dir('google-compute-engine')
		 {
        sh 'ls -ltr'
        sh 'pwd'
        sh 'gcloud auth activate-service-account jenkins@mi-uat-lab.iam.gserviceaccount.com --key-file=jenkins.json'
    }
    }
	} 
	    
	stage('Create Instance') {
	 steps {
    
    sh 'gcloud compute instances create pipeline-vm1 --zone=us-central1-a --tags=http-server --metadata=startup-script-url=https://storage.cloud.google.com/shoaib01/script.sh --metadata=startup-script=startup-script.sh'
         
	sh'cat <<EOF > startup.sh #! /bin/bash apt-get update apt-get install -y git apt-get install -y openjdk-* export JAVA_HOME=/usr git clone https://github.com/spring-projects/spring-petclinic.git cd spring-petclinic ./mvnw package java -jar target/*.jar'		 
    }
	}    
    }		  	
    }
